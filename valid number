class Solution(object):
    def isNumber(self, s):
        """
        :type s: str
        :rtype: bool
        """
        if not s:
            return False
        
        i = 0
        n = len(s)
        

        if i < n and (s[i] == '+' or s[i] == '-'):
            i += 1
        

        has_digit = False

        while i < n and s[i].isdigit():
            has_digit = True
            i += 1
        
        if i < n and s[i] == '.':
            i += 1

            while i < n and s[i].isdigit():
                has_digit = True
                i += 1
        
        if not has_digit:
            return False
        if i < n and (s[i] == 'e' or s[i] == 'E'):
            i += 1
            if i >= n:
                return False
            if s[i] == '+' or s[i] == '-':
                i += 1
            if i >= n or not s[i].isdigit():
                return False

            while i < n and s[i].isdigit():
                i += 1
        
        return i == n
